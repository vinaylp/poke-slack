# Slack MCP Server Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# SLACK CONFIGURATION (Required)
# =============================================================================

# Slack Bot User OAuth Token
# Get this from: https://api.slack.com/apps → Your App → OAuth & Permissions
# Format: xoxb-...
# Scopes needed: channels:history, channels:read, users:read
# Optional scope: users:read.email (only if INCLUDE_USER_EMAILS=true)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Comma-separated list of Slack channel IDs to monitor
# Get channel IDs by right-clicking a channel → View channel details
# Format: C1234567890,C9876543210
# Example: C08HALVARL0,C0519827Y05,C09H1KBM9PX,C08CDKS5UV9
SLACK_MONITOR_CHANNELS=C1234567890,C9876543210

# =============================================================================
# SECURITY CONFIGURATION (Required)
# =============================================================================

# MCP API Authentication Token
# Generate a secure random token (32+ characters recommended)
# Example: openssl rand -base64 32
# This token must be provided in the Authorization header: Bearer <token>
MCP_AUTH_TOKEN=your-secure-random-token-here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Include user email addresses in API responses
# Default: false (emails not included for privacy)
# Set to 'true' only if your integration needs email addresses
INCLUDE_USER_EMAILS=false

# Rate limiting: Maximum requests per time window
# Default: 60 requests per minute
RATE_LIMIT_MAX=60

# Rate limiting: Time window in milliseconds
# Default: 60000 (1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Logging level
# Options: debug, info, warn, error
# Default: info
# Use 'debug' for development, 'info' or 'warn' for production
LOG_LEVEL=info

# Node environment
# Options: development, production
# Default: production
NODE_ENV=production
